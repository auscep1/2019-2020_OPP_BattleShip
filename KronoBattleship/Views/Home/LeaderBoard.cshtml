@model IEnumerable<KronoBattleship.Models.UserViewModel>
@{
    ViewBag.Title = "LeaderBoard";
}

<h2>LeaderBoard</h2>

<div class="row">
    <div class="">
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-striped">
                <tr>
                    <th>Player</th>
                    <th>Wins</th>
                    <th>Losses</th>
                </tr>
                @foreach (var user in Model.OrderByDescending(n => n.Wins)) { 
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Wins</td>
                    <td>@user.Losses</td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>